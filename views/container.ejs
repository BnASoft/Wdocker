<!DOCTYPE html>
<html lang="ko">

<head>
  <% include ./partials/head %>
  <!-- 스크립트 -->
  <script src='/myapp/js/socketio.js'></script>
  <script src='/myapp/js/container.js'></script>


</head>


<body>
  <% include ./partials/topnav %>

<div class="container-fluid">
      <div class="row">
        <% include ./partials/nav %>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <div class="row placeholders">
            <div class="container">
              <div class="row">
                <div class="col-md-6" >
                  <h3>Create a Container</h3>
                    <form class="form-horizontal" id="CreateContainer">
                        <div class="form-group">
                          <label for="name" class="col-sm-2 control-label">Container Name: </label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" placeholder="Name">
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="image" class="col-sm-2 control-label">Images : </label>
                          <div class="col-sm-10">
                              <div class="btn-group">
                                <button id="image" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                   Images <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                </ul>
                              </div>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="command" class="col-sm-2 control-label">Command: </label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" id="command" value="/bin/bash" >
                          </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
                <div class="col-md-6">
                  <div class="row" id="detail">
                  </div>
                </div>
              </div>

              <div id="chatLogs"></div>
              <label class="checkbox-inline">
                 <input type="checkbox" id="containerlist" checked data-toggle="toggle" data-on="true"
                 data-off="false" data-onstyle="success" data-offstyle="danger">containerlist</input>
              </label>
            </div>
            <div>
              <h3 id="title">Containers List</h3>

              <div id="bgrp" class="btn-group" role="group">
                      <button id="dstart" type="button" class="btn btn-primary btn-lg ctlbtn">Start</button>
                      <button id="dstop" type="button" class="btn btn-default btn-lg ctlbtn">Stop</button>
                      <button id="dremove" type="button" class="btn btn-danger btn-lg ctlbtn">Remove</button>
              </div>
            </div>

            <table id="ctable" data-pagination="true" class="table table-striped">
            </table>

          </div>

        </div>
        </div>
      </div>
    </div>

</body>
</html>

<!DOCTYPE html>
<html lang="ko">

<head>
  <% include ./partials/head %>
  <!-- 스크립트 -->
  <link type="text/css" href="/myapp/lib/css/jquery.terminal.css" rel="stylesheet" />
  <script src="/myapp/lib/js/jquery.terminal.min.js"></script>

  <script src='/myapp/js/bundle/container.bundle.js'></script>

</head>


<body id="body">
  <% include ./partials/topnav %>

<div class="container-fluid">
      <div class="row">
        <% include ./partials/nav %>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <div class="row placeholders">

              <% include ./partials/connectDocker %>
              <div id="toolbar">
                      <div  class="btn-group" role="group">
                        <button  onclick=" return false;"  type="button" class="btn btn-default newForm">
                          <span class="glyphicon glyphicon-plus"></span>
                        </button>
                        <button  onclick=" return false;"  type="button" class="btn btn-default  remove">
                          <span class="glyphicon glyphicon-minus"></span></button>
                      </div>
                      <div  class="btn-group" role="group">

                      <button  onclick=" return false;"  type="button" class="btn btn-primary  start">
                        <span class="glyphicon glyphicon-play"></span>Start</button>
                      <button  onclick=" return false;"  type="button" class="btn btn-default  stop">
                        <span class="glyphicon glyphicon-stop">Stop</button>
                      <button  onclick=" return false;"  type="button" class="btn btn-warning  pause">
                          <span class="glyphicon glyphicon-pause"></span>Pause</button>

                      <button  onclick=" return false;"  type="button" class="btn btn-success  unpause">
                        <span class="glyphicon glyphicon-step-forward"></span>Unpause</button>
                      <button  onclick=" return false;"  type="button" class="btn btn-danger  kill">
                        <span class="glyphicon glyphicon-flash"></span>Kill</button>
                      </div>

              </div>

              <div class="panel panel-success row">
                  <div class="panel-heading">
                      <h4 class ="text-left">컨테이너 관리</h4>
                  </div>
                  <div class="panel-body">
                      <table data-toolbar="#toolbar" data-pagination="true" class="table table-striped jsonTable"></table>
                  </div>
              </div>
            <div class="row">
              <div class="col-md-12">
                <div  id="terminal" style="height: 300px;text-align: left;">
                </div>
              </div>


              <!-- hiddden -->
              <div class="col-md-6" >
                  <form class="form-horizontal" id="hiddenForm" >
                      <div class="form-group">
                        <label for="name" class="col-sm-2 control-label">Container Name: </label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="name"  placeholder="Name">
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="image" class="col-sm-2 control-label">Images : </label>
                        <div class="col-sm-10">
                            <div class="btn-group  btn-block">
                              <button id="imageDropDown" type="button" class="btn btn-default dropdown-toggle btn-block"  data-toggle="dropdown" aria-expanded="false">
                                 Images <span class="caret"></span>
                              </button>
                              <ul class="dropdown-menu col-xs-12" id="imageMenu">
                              </ul>
                            </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="command" class="col-sm-2 control-label">Command: </label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="command" value="/bin/bash" >
                        </div>

                      </div>

                     <% include ./partials/label %>
                     <% include ./partials/port %>

                      <button type="button" class="btn btn-primary" id ="more">
                        <span class="glyphicon glyphicon-plus"></span>
                        More</button>
                      <button type="button" class="btn btn-danger" id ="less">
                          <span class="glyphicon glyphicon-minus"></span>
                         Less</button>

                         <div class="moreForm">

                               <div class="form-group">
                                 <label for="volumeDropDown" class="col-sm-2 control-label">Volume : </label>
                                   <div class="col-sm-10 btn-group">
                                     <button id="volumeDropDown" type="button" class="btn btn-default dropdown-toggle btn-block"  data-toggle="dropdown" aria-expanded="false">
                                        Volumes <span class="caret"></span>
                                     </button>
                                     <ul class="dropdown-menu col-xs-12" id="volumeMenu">
                                     </ul>
                                   </div>
                              </div>

                              <div class="form-group">
                                <label for="containerDest" class="col-sm-2 control-label">Container Path : </label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" id="containerDest" placeholder="/xxxx/xxxx/">
                                </div>
                              </div>

                              <hr class="divider">
                              <div class="form-group">
                                <label for="volumeDropDown" class="col-sm-2 control-label">Network : </label>
                                  <div class="col-sm-10 btn-group">
                                    <button id="networkDropDown" type="button" class="btn btn-default dropdown-toggle btn-block"  data-toggle="dropdown" aria-expanded="false">
                                       Networks <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu col-xs-12" id="networkMenu">
                                    </ul>
                                  </div>
                             </div>
                        </div>
                  </form>
              </div>
          </div>
          </div>

        </div>
        </div>
      </div>
    </div>

</body>
</html>

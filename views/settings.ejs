<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>

    <script src='/myapp/js/bundle/settings.bundle.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>

  </head>
  <body>
    <% include ./partials/topnav %>
    <div class="container-fluid">
          <div class="row">
            <% include ./partials/nav %>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
              <div class="row placeholders">
                <div class="container">
                  <div class="panel panel-success row">
                      <div class="panel-heading">
                          <h4 class ="text-left">Docker Settings</h4>
                      </div>
                        <div class="panel-body">
                          <form class="form-horizontal" action="/myapp/settings" method="post" >
                            <div class="form-group row">
                              <label for="name" class="col-md-2 control-label">Docker Host IP  </label>
                              <div class="col-md-6">
                                <input type="text" class="form-control ip_address" id="ip"  name="ip" placeholder="xxx.xxx.xxx.xxx">
                              </div>
                            </div>
                            <div class="form-group row">
                              <label for="name" class="col-md-2 control-label">Docker Host Port  </label>
                              <div class="col-md-6">
                                <input type="number" class="form-control" id="port" min="1" max="65535"   name="port" placeholder="port number">
                              </div>
                              <div class="col-md-2">
                                <button type="submit" class="btn btn-default btn-primary btn-block">Add</button>
                              </div>
                            </div>
                          </form>

                          <table data-pagination="true"  class="table table-striped jsonTable">
                          </table>
                      </div>
                </div>
                </div>
              </div>
            </div>
          </div>
    </div>

  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
    <link type="text/css" href="/myapp/css/jquery.terminal.css" rel="stylesheet" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="/myapp/js/swarm.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
  </head>
  <body>
    <% include ./partials/topnav %>
    <div class="container-fluid">
          <div class="row">
            <% include ./partials/nav %>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
              <div class="row placeholders">
                <div class="container">
                  <form class="form-horizontal" id="swarmInit">
                      <div class="form-group">
                        <label for="swarmPort" class="col-sm-2 control-label">swarm Init Port : </label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="swarmPort">
                        </div>
                      </div>
                        <button type="submit" class="btn btn-primary">Init</button>
                    </form>
                    <form class="form-horizontal" id="swarmLeave">
                      <label for="force" class="col-sm-2 control-label">force : </label>
                      <div class="col-sm-2">
                        <label class="checkbox-inline">
                           <input type="checkbox" id="force" checked data-toggle="toggle" data-on="unforce"
                           data-off="force" data-onstyle="success" data-offstyle="danger"></input>
                        </label>
                      </div>
                          <button class="btn btn-primary">Leave</button>
                      </form>
                    <form class="form-horizontal" id="swarmJoin">
                        <div class="form-group">
                          <label for="ip" class="col-sm-2 control-label">Swarm Join IP : </label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" id="ip">
                          </div>
                        </div>
                          <button type="submit" class="btn btn-primary">Join</button>
                      </form>
                      <form class="form-horizontal" id="sshConnection">
                          <div class="form-group">
                            <label for="hostip" class="col-sm-2 control-label">Remote Host IP : </label>
                            <div class="col-sm-10">
                              <input class="form-control ip_address" type="text" id="hostip" name="ip">
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="port" class="col-sm-2 control-label">Ssh Port : </label>
                            <div class="col-sm-10">
                              <input type="number" class="form-control" id="port" value="22">
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="user" class="col-sm-2 control-label">Ssh User : </label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" id="user" value="pirate">
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="passwd" class="col-sm-2 control-label">Ssh Password : </label>
                            <div class="col-sm-10">
                              <input type="password" class="form-control" id="passwd">
                            </div>
                          </div>
                            <button type="submit" class="btn btn-primary">Connection</button>
                      </form>
                      <form class="form-horizontal" id="Access">
                          <div class="form-group">
                            <label for="ip" class="col-sm-2 control-label">Worker Access : </label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" id="accessip">
                            </div>
                          </div>
                            <button type="submit" class="btn btn-primary">Access</button>
                      </form>
                </div>
              </div>
            </div>
          </div>
    </div>

  </body>
</html>
